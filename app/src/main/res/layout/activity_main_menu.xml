<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity"
    android:background="@color/whiteBackground">

    <RelativeLayout
        android:id="@+id/logoSpace"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <View
            android:layout_width="81dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/dpass_logo02" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:text="000.000.000.0" />

    </RelativeLayout>

    <View
        android:id="@+id/btQCcode"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/logoSpace"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blackButton"
        android:background="@drawable/shaper"
        android:elevation="6dp" />

    <View
        android:id="@+id/btSetup"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btQCcode"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shaper"
        android:backgroundTint="@color/blackButton"
        android:elevation="6dp" />

    <View
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/logoSpace"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_toLeftOf="@id/btQCcode"
        android:background="@drawable/shaper"
        android:elevation="6dp"
        android:minWidth="240dp" />

    <RelativeLayout
        android:id="@+id/usetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/status"
        android:layout_alignTop="@id/status"
        android:layout_alignBottom="@id/status"
        android:elevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:elevation="6dp"
            android:text="이소윤"
            android:textColor="#4D4D4D"
            android:textSize="34dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/usetName"
        android:layout_alignEnd="@id/status"
        android:layout_alignBottom="@id/status"
        android:layout_alignTop="@id/status"
        android:elevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/infotop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vaccineInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:elevation="6dp"
                    android:text="백신 접종 여부"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vaccineInfo"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="14dp"
                    android:elevation="6dp"
                    android:text="3차 접종(부스터)"
                    android:textColor="#4D4D4D"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infotop">

                <TextView
                    android:id="@+id/vaccineDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:elevation="6dp"
                    android:text="접종일"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vaccineDay"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="14dp"
                    android:elevation="6dp"
                    android:text="2022.01.18"
                    android:textColor="#4D4D4D"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <View
        android:id="@+id/dpassStatus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/status"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toLeftOf="@id/btSetup"
        android:background="@drawable/shaper"
        android:elevation="6dp"
        android:minWidth="240dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/dpassStatus"
        android:layout_alignBottom="@id/dpassStatus"
        android:layout_alignStart="@id/dpassStatus"
        android:layout_alignEnd="@id/dpassStatus"
        android:elevation="6dp">

        <TextView
            android:id="@+id/dpassstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:text="D-Pass 상태"
            android:textSize="15dp" />

        <TextView
            android:layout_marginStart="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/bttStet"
            android:layout_marginEnd="13dp"
            android:text="연결됨"
            android:textSize="10dp"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/bttStet"
            android:layout_width="30dp"
            android:layout_height="13dp"
            android:background="@drawable/btt"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <View
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="168dp"
        android:layout_below="@id/dpassStatus"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shaper"
        android:elevation="6dp"
        android:minWidth="240dp" />

    <RelativeLayout
        android:id="@+id/rrRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/temp"
        android:layout_alignBottom="@id/temp"
        android:layout_alignStart="@id/temp"
        android:layout_alignEnd="@id/temp"
        android:elevation="6dp">

        <View
            android:layout_width="6dp"
            android:layout_height="61dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/shaper"
            android:backgroundTint="#68FF63" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/temp"
        android:layout_alignStart="@id/temp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="18dp"
        android:text="현재 체온"
        android:textSize="15dp"
        android:elevation="6dp"
        android:textColor="#4D4D4D"/>

    <TextView
        android:id="@+id/nowtemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/temp"
        android:layout_alignTop="@id/temp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:elevation="6dp"
        android:text="35.7℃"
        android:textColor="#4D4D4D"
        android:textSize="91dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/impaction"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:layout_below="@id/temp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shaper"
        android:elevation="6dp"
        android:minWidth="240dp" />

    <View
        android:id="@+id/locationInfo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/temp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/impaction"
        android:background="@drawable/shaper"
        android:elevation="6dp"
        android:minWidth="240dp" />

    <View
        android:id="@+id/locationInfo01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationInfo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shaper"
        android:elevation="6dp"
        android:minWidth="240dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/locationInfo01"
        android:layout_alignTop="@id/locationInfo01"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:elevation="6dp" />


</RelativeLayout>