<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="@color/whiteBackground">

    <RelativeLayout
        android:id="@+id/logoSpace"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <View
            android:layout_width="81dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/dpass_logo02" />

        <TextView
            android:id="@+id/btAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:text="000.000.000.0" />

    </RelativeLayout>

    <View
        android:id="@+id/dpassReset"
        android:layout_width="354dp"
        android:layout_height="167dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logoSpace"
        android:elevation="6dp"
        android:minWidth="240dp"
        android:background="@drawable/shaper"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/dpassReset"
        android:layout_alignTop="@id/dpassReset"
        android:layout_alignEnd="@id/dpassReset"
        android:layout_alignBottom="@id/dpassReset"
        android:elevation="6dp">

        <View
            android:id="@+id/btDpassReset"
            android:layout_width="271dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shaper"
            android:backgroundTint="@color/blackButton"
            android:elevation="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btDpassReset"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            android:text="D-Pass 연결 시작"
            android:textColor="#fff"
            android:textSize="10dp"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/swl01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="D-Pass 연결"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/etcSetting"
        android:layout_width="354dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dpassReset"
        android:layout_marginTop="14dp"
        android:elevation="6dp"
        android:minWidth="240dp"
        android:background="@drawable/shaper"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/etcSetting"
        android:layout_alignEnd="@id/etcSetting"
        android:layout_alignTop="@id/etcSetting"
        android:layout_alignBottom="@id/etcSetting"
        android:elevation="6dp">
        <RelativeLayout
            android:id="@+id/swl02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="앱 알림"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/swl03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/swl02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="온도 알림"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/swl04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/swl03">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="온도 알림 주기"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>